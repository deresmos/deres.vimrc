{
  "suggest.timeout": 5000,
  "coc.preferences.previewAutoClose": false,
  "coc.preferences.rootPatterns": [".vim",".git",".hg",".projections.json"],
  "coc.preferences.colorSupport": true,
  "suggest.maxPreviewWidth": 100,
  "suggest.snippetIndicator": " >>",
  "suggest.maxCompleteItemCount": 25,
  "diagnostic.enable": true,
  "diagnostic.virtualText": false,
  "diagnostic.virtualTextPrefix": " >> ",
  "diagnostic.checkCurrentLine": true,
  "signature.maxWindowHeight": 25,
  "signature.preferShownAbove": false,
  "signature.hideOnTextChange": false,

  "languageserver": {
    "terraform": {
        "command": "terraform-lsp",
        "filetypes": ["terraform"]
    }
  },

  "python.jediEnabled": true,
  "python.jediPath":"~/.pyenv/shims/python",
  "python.linting.flake8Enabled": false,
  "python.linting.mypyEnabled": false,
  "python.linting.banditEnabled": false,
  "python.linting.pylintEnabled": false,

  "codeLens.enable": false
}
